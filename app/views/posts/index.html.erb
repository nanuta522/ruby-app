<div class='container mt-5'>
  <h1>Posts</h1>

  <div id="posts", class='mt-4 mb-5'>
    <div class="row ">
      <% @posts.each do |post| %>
        <div class="col-md-4">
          <div class="card text-center mb-5">
            <div class="card-header">
              <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <%= link_to "New post", new_post_path, class:"nav-link active" %>
                </li>
              </ul>
            </div>

            <div class="card-body">
              <h5 class="card-title">
                <%= post.title %>
              </h5>

              <p class="card-text">
                <%= post.body %>
              </p>
              
              <%= link_to "See post", post, class:"btn btn-outline-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
